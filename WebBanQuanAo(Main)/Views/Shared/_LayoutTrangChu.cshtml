<!DOCTYPE html>
<link href="~/Content/TrangLamWeb/layout1.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/js/all.min.js"></script>
    <title>Trang Chủ</title>

</head>
<body>
    <header id="dautrang">

        <div class="logo">
            <a href="TrangChu">
                <img src="https://raw.githubusercontent.com/Nomu-276/dulieuweb/main/Nomie.png" title="Nomie" />
            </a>
        </div>
        <div id="menuleft">
            <nav>
                <ul class="fm-menu">
                    <li><a href="TrangChu">Nữ</a></li>
                    <li><a href="TrangChuNam">Nam</a></li>
                    <li><a href="TrangChuTreEm">Trẻ em</a></li>
                </ul>
            </nav>

        </div>
        <div id="menuright">
            <nav>
                <ul class="fm-menu">
                    <li>
                        <form class="search-form" action="@Url.Action("DanhSachSanPham", "TrangChu", "DanhSachSanPhamNam","DanhSachSanPhamTreEm")" method="get" style="display:inline;">
                            <div class="search">
                                <input type="text" class="input" name="q" placeholder="Search" value="@(Request.QueryString["q"] ?? "")">
                                <button class="btn" type="submit">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>

                    </li>
                    <li>
                        <div><a href="DangNhap"><i class="fa-regular fa-user"></i></a></div>
                    </li>
                    <li><a href="YeuThich"><i class="fa-regular fa-heart"></i></a></li>
                    <li>
                        <div class="cart-link" id="cart-link-wrap">
                            <a href="GioHang" id="cart-link" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-basket-shopping"></i>
                                <span id="cart-count" class="cart-count" aria-hidden="true">0</span>
                            </a>
                            <div id="cart-preview" class="cart-preview" aria-hidden="true"></div>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <main id="main-content">

        @RenderBody()

    </main>
    <footer id="chantrang">
        <div class="menufoot">
            <nav>
                <h2 class="h2-foot" id="">Mua sắm</h2>
                <ul class="fm-menufoot">
                    <li><a href="TrangChu">Nữ</a></li>
                    <li><a href="TrangChuNam">Nam</a></li>
                    <li><a href="TrangChuTreEm">Trẻ em</a></li>
                </ul>
            </nav>
        </div>
        <div class="menufoot">
            <nav>
                <h2 class="h2-foot">Thông tin doanh nghiệp</h2>

            </nav>
        </div>
        <div class="menufoot">
            <nav>
                <h2 class="h2-foot">Trợ giúp</h2>
                <ul class="fm-menufoot">
                    <li><a href="#">Dịch vụ khách hàng</a></li>
                    <li><a href="TaiKhoan">Tài khoản của tôi</a></li>
                </ul>
            </nav>
        </div>
    </footer>
    <script src="~/Scripts/TrangLamWeb/btnsearch.js"></script>
    <script src="~/Scripts/TrangLamWeb/user-link.js"></script>
    <script src="~/Scripts/TrangLamWeb/cart.js"></script>
</body>
</html>
