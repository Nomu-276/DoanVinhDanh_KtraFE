
@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<style>
    .account-page {
        padding: 120px 20px 40px;
    }

    .formdangnhap {
        max-width: 620px;
        margin: 0 auto;
    }

    .lichsugiaohang{
        text-decoration: none;
        color:gray;
        font-weight:700;
    }
    .lichsugiaohang:hover{
        color:black;
    }
    #btn-logout {
        padding: 10px 16px;
        background: #000;
        color: #fff;
        border: 0;
        border-radius: 6px;
        cursor: pointer;
    }
</style>
<div class="account-page" >
    <div class="formdangnhap">
        <div class="form-h">
            <h4>Thông tin tài khoản</h4>
        </div>
        <div class="form-b">
            <div class="fm-form">
                <h2>Xin chào</h2>
                <div style="margin:12px 0;">
                    <strong>Email:</strong> <span id="acc-email">-</span>
                </div>
                <div style="margin:6px 0;">
                    <strong>Ngày sinh:</strong> <span id="acc-dob">-</span>
                </div>
                <div style="margin:6px 0;">
                    <strong>Tham gia từ:</strong> <span id="acc-created">-</span>
                </div>
                <div style="margin:10px 0;">
                    <a href="LichSuDonHang" class="lichsugiaohang">Lịch sử giao hàng </a>
                </div>
                <div style="margin-top:18px;">
                    <button id="btn-logout">
                        Đăng xuất
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/TrangLamWeb/taikhoan.js"></script>

