<link href="~/Content/TrangLamWeb/thanhtoan.css" rel="stylesheet" />
@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<!--thẻ thanh toán-->
<h1 class="header-thanhtoan">THANH TOÁN</h1>

<section>
    <div class="left">
        <div class="section">
            <h2>Giỏ Hàng</h2>
            <table id="tbCart">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá tiền($)</th>
                        <th>Tổng($)</th>
                    </tr>
                </thead>
                <tbody id="bdCart"></tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"><bold>Tổng tiền sản phẩm:</bold></td>
                        <td id="Tong">$0.00</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <!--thẻ thông tin người mua-->
        <div class="section">
            <h2>Thông tin cá nhân</h2>
            <form id="ThongTin">
                <label for="họ và tên">Họ và tên:</label>
                <input type="text" id="họ và tên" required>

                <label for="Đt">Số điện thoại:</label>
                <input type="tel" id="Đt" required>

                <label for="email">Địa chỉ mail:</label>
                <input type="email" id="email" required>
            </form>


            <!--thẻ giao hàng-->

            <h2>Địa chỉ giao hàng</h2>
            <form id="FormGiaoHang">
                <label for="city">Thành phố:</label>
                <input type="text" id="city" required>
                <label for="địa chỉ">Địa chỉ:</label>
                <input type="text" id="địa chỉ" required>
            </form>

            <!--thẻ Voucher-->

            <h2>Voucher</h2>
            <form id="FormVoucher" style="display: grid; grid-template-columns: 1fr auto; gap: 10px;">
                <input type="text" id="VoucherCode" placeholder="Enter coupon code...">
                <button type="button" onclick="sdVoucher()">Sử dụng</button>
            </form>
            <p id="voucherMessage" style="margin-top: 10px; color: green;"></p>

            <!--thẻ phương thức thanh toán-->

            <h2>Phương thức thanh toán</h2>
            <form id="FormThanhToan">
                <div class="PaymentOptions">
                    <label>
                        <input type="radio" name="PtThanhToan" value="credit" checked onclick="togglePaymentFields()"> Credit Card
                    </label>
                    <label>
                        <input type="radio" name="PtThanhToan" value="momo" onclick="togglePaymentFields()"> Momo
                    </label>
                </div>
                <div id="creditcard" class="credit-card">
                    <label for="cardNum">Số thẻ:</label>
                    <input type="text" id="cardNum" placeholder="3412 8275 0199 0999" maxlength="19" required>

                    <label for="ten">Tên chủ thẻ:</label>
                    <input type="text" id="ten" required>

                    <label for="expiry">Ngày hết hạn:</label>
                    <input type="text" id="expiry" placeholder="MM/YY" maxlength="5" required>

                    <label for="cvv">CVV:</label>
                    <input type="text" id="cvv" placeholder="999" maxlength="3" required>
                </div>

                <div id="momo" class="creditcard" style="display: none;">
                    <p>Nhập số điện thoại:<input type="tel" id="sdt"></p>
                </div>
            </form>
        </div>

    </div>
    <!--thẻ đơn hàng-->
    <div class="donhang">
        <h2>Đơn hàng</h2>
        <div class="fm-donhang">
            <p>Tổng tiền sản phẩm: $<span id="orderValue">0.00</span></p>
            <p>Phí vận chuyển: $<span id="deliveryFee">8.00</span></p>
            <p>Voucher giảm giá: - $<span id="voucherDiscount">0.00</span></p>
            <p class="total">Total Amount: $<span id="totalAmount">0.00</span></p>
        </div>
        <div class="form-submit">
            <button type="submit" onclick="submitOrder()">Hoàn tất ngay</button>
        </div>

    </div>


</section>
<script src="~/Scripts/TrangLamWeb/checkout.js"></script>



