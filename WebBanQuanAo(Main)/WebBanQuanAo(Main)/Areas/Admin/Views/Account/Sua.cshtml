@model WebBanQuanAo_Main_.Models.AdminUser

@{
    ViewBag.Title = "Sua";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cập nhật tài khoản</h2>
@using (Html.BeginForm("Sua", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(m => m.NameUser)</th>
        <td>@Html.EditorFor(m => m.NameUser)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.RoleUser)</th>
        <td>@Html.EditorFor(m => m.RoleUser)</td>
    </tr>
    <tr>
        <th>@Html.DisplayNameFor(m => m.PasswordUser)</th>
        <td>@Html.EditorFor(m => m.PasswordUser)</td>
    </tr>
    <tr>
        <td colspan="2"><input type="submit" value="Cập nhật" /></td>
    </tr>
</table>
}
@Html.ActionLink("Quay về danh sách","Index","Account",null,new {@class="btn btn-success"})
