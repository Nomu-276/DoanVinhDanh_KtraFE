@model WebBanQuanAo_Main_.Models.AdminUser

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/Admin/CDED.css" rel="stylesheet" />
<div class="admin-container">
    <div class="admin-title text-center alert alert-danger">Xác nhận xóa tài khoản</div>
    <div class="alert alert-warning">
        Bạn có chắc muốn xóa tài khoản này?
    </div>
    @using (Html.BeginForm("Xoa", "Account", FormMethod.Post))
    {

            @Html.AntiForgeryToken()
            <div class="admin-form">
                <div class="mb-3 mt-3">
                    <h4>Tên người dùng</h4>
                    @Html.DisplayFor(m => m.NameUser, new { htmlAttributes = new { @class = " form-control" } })
                </div>
                <div class="mb-3 mt-3">
                    <h4>Vai trò</h4>
                    @Html.DisplayFor(m => m.RoleUser, new { htmlAttributes = new { @class = " form-control" } })
                    <div class="mb-3 mt-3">
                        <h4>Mật khẩu</h4>
                        @Html.DisplayFor(m => m.PasswordUser, new { htmlAttributes = new { @class = " form-control" } })
                    </div>
                    <div>
                        <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                        @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-success" })
                    </div>
                </div>
                }

            </div>
    }
</div>