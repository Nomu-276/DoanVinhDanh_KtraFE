<link href="~/Content/Admin/Cart.css" rel="stylesheet" />

<div class="container my-5 cart-wrapper">

    <h1 class="text-uppercase mb-4 fw-bold">GIỎ HÀNG</h1>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <p class="lead">Giỏ hàng của bạn đang trống.</p>
            <a href="@Url.Action("IndexCustomer","Product")" class="btn btn-dark mt-3">TIẾP TỤC MUA HÀNG</a>
        </div>
    }
    else
    {
        <div class="row">

            <div class="col-lg-7 pr-lg-5">

                @foreach (var item in Model)
                {
                    <div class="row py-3 mb-3 border-bottom cart-item-detail">

                        <div class="col-4">
                            <img src="@Url.Content(item.image)" class="img-fluid" alt="@item.namePro" />
                        </div>

                        <div class="col-8">
                            <p class="mb-1 text-uppercase fw-bold small">H&M</p>
                            <h5 class="mb-2 fw-bold">@item.namePro</h5>

                            <div class="small text-muted mb-3">
                                <p class="mb-0">Colour: Light beige</p>
                                <p class="mb-0">Size: 42</p>
                            </div>

                            <div class="d-flex align-items-center mb-3 quantity-control-simple">
                                <a href="@Url.Action("DecreaseQuantity", "Cart", new { id = item.idPro })" class="btn-qty border px-2 py-1 me-2 text-decoration-none text-dark">−</a>
                                <span class="me-2">@item.quantity</span>
                                <a href="@Url.Action("IncreaseQuantity", "Cart", new { id = item.idPro })" class="btn-qty border px-2 py-1 text-decoration-none text-dark">+</a>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <p class="fw-bold mb-0">Total: @String.Format("{0:N0}", item.total) VNĐ</p>
                                <a href="@Url.Action("RemoveFromCart", "Cart", new { id = item.idPro })" class="text-dark small text-decoration-underline">
                                    Xóa
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-5 summary-box-simple mt-4 mt-lg-0">
                <h2 class="h4 text-uppercase fw-bold mb-4">TỔNG</h2>

                <div class="d-flex justify-content-between mb-2 small">
                    <span>GIÁ TRỊ ĐƠN HÀNG</span>
                    <span>@String.Format("{0:N0}", Model.Sum(x => x.total)) VNĐ</span>
                </div>

                <div class="d-flex justify-content-between mb-2 small text-danger fw-bold">
                    <span>VOUCHER</span>
                    <span>- 29,880 VNĐ</span>
                </div>

                <div class="d-flex justify-content-between mb-3 small">
                    <span>PHÍ GIAO HÀNG</span>
                    <span>Free</span>
                </div>

                <div class="d-flex justify-content-between pt-3 border-top fw-bold h5">
                    <span class="text-uppercase">TỔNG</span>
                    <span>@String.Format("{0:N0}", Model.Sum(x => x.total) + 30000 - 29880) VNĐ</span>
                </div>
                <a href="@Url.Action("Index","Checkout")"><button class="btn btn-dark w-100 py-3 mt-4 fw-bold rounded-0 text-uppercase">
    TIẾP TỤC THANH TOÁN
</button></a>
                

                
                    
                </div>
            </div>
        
    }
</div>
