@model WebBanQuanAo_Main_.Models.Category

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/Admin/CDED.css" rel="stylesheet" />
<div class="admin-container">
    <div class="admin-title text-center alert alert-primary">Thông tin chi tiết của danh mục</div>

    @using (Html.BeginForm("Detail", "Category"))
    {
        <div class="admin-form">

            @Html.HiddenFor(m => m.IDCate)
            <div class="mb-3 mt-3">
                <h4>Tên danh mục</h4>

                <div style="font-size:25px;">@Html.DisplayFor(m => m.NameCate, new { htmlAttributes = new { @class = "form-control" } })</div>
            </div>
            @Html.ActionLink("Quay về danh sách", "DanhSachDanhMuc", null, new { @class = "btn btn-success" })
        </div>
     }
</div>

    <hr />
    <div class="alert alert-info text-center">
        <h3 style="text-transform:uppercase">Sản phẩm thuộc danh mục này</h3>
    </div>
    <div class="container">
        @if (Model.Products != null && Model.Products.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Mã SP</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th>Giá</th>
                        <th>Thao tác</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var sp in Model.Products)
                    {
                        <tr>
                            <td>@sp.ProductID</td>
                            <td>@sp.NamePro</td>
                            <td>
                                <img src="@Url.Content(sp.ImagePro)" width="200" height="300" />
                            </td>
                            <td>@String.Format("{0:N0} VNĐ", sp.Price)</td>
                            <td>
                                @Html.ActionLink("Chi tiết", "ChiTietAdmin", "Product", new { id = sp.ProductID }, new { @class = "btn btn-info btn-sm" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {
            <p><i>Danh mục này chưa có sản phẩm nào.</i></p>
        }
    </div>
    
