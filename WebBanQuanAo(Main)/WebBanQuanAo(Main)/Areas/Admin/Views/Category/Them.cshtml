@model WebBanQuanAo_Main_.Models.Category

@{
    ViewBag.Title = "Them";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/Admin/CDED.css" rel="stylesheet" />
<div class="admin-container">
    <div class="admin-title text-center alert alert-success">Thêm mới danh mục</div>

    @using (Html.BeginForm("Them", "Category", FormMethod.Post))
    {

        @Html.AntiForgeryToken();
        
        <div class="admin-form">
                @Html.HiddenFor(m => m.IDCate)
                <div class="mb-3 mt-3">
                    <h4>Tên danh mục</h4>
                    
                    @Html.EditorFor(m => m.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div>
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    @Html.ActionLink("Quay về danh sách", "DanhSachDanhMuc", null, new { @class = "btn btn-success" })
                </div>
                
        </div>
    }
   
</div>
