@model WebBanQuanAo_Main_.Models.Category

@{
    ViewBag.Title = "Xoa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/Admin/CDED.css" rel="stylesheet" />
<div class="admin-container">
    <div class="admin-title text-center alert alert-danger">Xác nhận xóa danh mục</div>
    <div class="alert alert-warning">
        Bạn có chắc muốn xóa mục này?
    </div>
    @using (Html.BeginForm("Xoa", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="admin-form">
            @Html.HiddenFor(m => m.IDCate)
            <div class="mb-3 mt-3">
                <h4>Tên danh mục</h4>
                @Html.EditorFor(m => m.NameCate, new { htmlAttributes = new { @class = " form-control" } })
            </div>
            <div>
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                @Html.ActionLink("Quay về danh sách", "DanhSachDanhMuc", null, new { @class = "btn btn-success" })
            </div>
        </div>
    }

</div>
