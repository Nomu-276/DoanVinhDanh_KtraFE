@model WebBanQuanAo_Main_.Models.AdminUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Form login</h2>
@using (Html.BeginForm("Login", "LoginRegister"))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <td>
                @Html.LabelFor(m => m.ID)
            </td>
            <td>@Html.EditorFor(m => m.ID)</td>
            <td style="color:red;">
                @Html.ValidationMessageFor(m => m.ID)
                @if (ViewBag.ErrLoginID != null)
                {
                    @ViewBag.ErrLoginID
                }
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.NameUser)
            </td>
            <td>@Html.EditorFor(m => m.NameUser)</td>
            <td style="color:red;">
                @Html.ValidationMessageFor(m => m.NameUser)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.RoleUser)
            </td>
            <td>@Html.EditorFor(m => m.RoleUser)</td>
            <td style="color:red;">
                @Html.ValidationMessageFor(m => m.RoleUser)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.PasswordUser)
            </td>
            <td>@Html.PasswordFor(m => m.PasswordUser)</td>
            <td style="color:red;">
                @Html.ValidationMessageFor(m => m.PasswordUser)
                @if (ViewBag.ErrLoginPass != null)
                {
                    @ViewBag.ErrLoginPass
                }
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Login" class="btn btn-warning" />
            </td>
            <td>
                @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-dark" })
            </td>
        </tr>
    </table>
}
