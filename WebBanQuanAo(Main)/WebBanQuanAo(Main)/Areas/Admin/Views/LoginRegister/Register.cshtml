@model WebBanQuanAo_Main_.Models.AdminUser

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Form Register</h2>
@using (Html.BeginForm("Register", "LoginRegister"))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <td>
                @Html.LabelFor(m => m.ID)
            </td>
            <td>
                @Html.EditorFor(m => m.ID)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(m => m.ID)
                @if (ViewBag.ErrorRegister != null)
                {
                    @ViewBag.ErrorRegister
                }
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.NameUser)
            </td>
            <td>
                @Html.EditorFor(m => m.NameUser)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(m => m.NameUser)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.RoleUser)
            </td>
            <td>
                @Html.EditorFor(m => m.RoleUser)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(m => m.RoleUser)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.PasswordUser)
            </td>
            <td>
                @Html.PasswordFor(m => m.PasswordUser)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(m => m.PasswordUser)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.ConfirmPassword)
            </td>
            <td>
                @Html.EditorFor(m => m.ConfirmPassword)
            </td>
            <td style="color:red">
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Register" />
            </td>
            <td>
                @Html.ActionLink("Login", "Index", "LoginRegister", null, new { @class = "btn btn-primary" })
            </td>
        </tr>
    </table>
}

