@model IEnumerable<WebBanQuanAo_Main_.Models.Product>



@{
    var categories = ViewBag.Categories as List<WebBanQuanAo_Main_.Models.Category>;
    ViewBag.Title = "IndexCustomer";
    Layout = "~/Areas/Admin/Views/Shared/_MasterLayout.cshtml";
}

<link href="~/Content/Admin/DanhSachSanPham.css" rel="stylesheet" />


<h4 class="text-center" style="margin-top:20px;">Danh sách sản phẩm</h4>

 @*HIỂN THỊ DANH MỤC*@ 
<div class="category-menu container">
    <a href="@Url.Action("IndexCustomer", "Product")" style="font-weight:700;">Xem tất cả</a>

@foreach (var cate in categories)
{
    <a href="@Url.Action("IndexCustomer", "Product", new { cateId = cate.IDCate })">
        @cate.NameCate
    </a>
}
</div>

 @*HIỂN THỊ SẢN PHẨM*@ 
<div class="product-grid">
    @foreach (var item in Model)
    {
        <div class="product-card">
            <a href="@Url.Action("ChiTiet", "Product", new { id = item.ProductID })">
                <img src="@Url.Content(item.ImagePro)" alt="@item.NamePro" />
            </a>

            <div class="product-name">@item.NamePro</div>

            @{
                // Lấy giá từ bảng ProDetail
                var detail = item.ProDetails.FirstOrDefault();
                var price = detail != null ? detail.Price : 0;
            }

            <div class="product-price">@String.Format("₫{0:N0}", price)</div>
        </div>
    }
</div>






