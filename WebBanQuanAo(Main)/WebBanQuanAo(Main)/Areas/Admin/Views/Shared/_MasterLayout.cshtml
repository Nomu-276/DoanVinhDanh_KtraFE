
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NOMIE SHOP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">
    @*Bootstrap CSS*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    @*Bootstrap Icons*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    @*Font Awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/js/all.min.js"></script>
    <link href="~/Content/Admin/AdLayout.css" rel="stylesheet" />
    
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white py-2 shadow-sm">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand" href="@Url.Action("IndexCus","Home")">
                <img style="object-fit: cover;" src="https://raw.githubusercontent.com/Nomu-276/dulieuweb/main/Nomie.png"
                     class="logo-img">
            </a>

            <!-- Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu" >
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">

                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 text-center">
                    <li class="nav-item">
                        @Html.ActionLink("NỮ", "IndexCustomer", "Product", null, new {@class="nav-link"})
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">NAM</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">TRẺ EM</a>
                    </li>
                </ul>

                <div class="d-flex justify-content-center pb-3 pb-lg-0">
                    <i class="fa-solid fa-magnifying-glass mx-2 fs-4"></i>
                    <i class="fa-regular fa-user mx-2 fs-4"></i>
                    
                    <a href="@Url.Action("Index","Cart")" style="text-decoration:none; color:black; ">
                    <i class="fa-solid fa-bag-shopping mx-2 fs-4"></i>
                    </a>
                    <span style="color: white; position: relative;margin-left:30px;margin-bottom:5px">@ViewBag.Count</span>

                </div>

            </div>

        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr /> 
        <footer class="footer-hm">
            <p>&copy; @DateTime.Now.Year - NOMIE SHOP - QUẦN ÁO NỮ</p>
            <div class="container">
                <div class="row">

                    <!-- CỘT 1 -->
                    <div class="col-md-4 col-sm-4">
                        <h4>Mua sắm</h4>
                        <a href="@Url.Action("IndexCustomer","Product")">NỮ</a>
                        <a href="#">NAM</a>
                        <a href="#">TRẺ EM</a>
                    </div>

                    <!-- CỘT 2 -->
                    <div class="col-md-4 col-sm-4">
                        <h4>Thông tin doanh nghiệp</h4>
                        <a href="#">Giới thiệu về NOMIE Group</a>
                    </div>

                    <!-- CỘT 3 -->
                    <div class="col-md-4 col-sm-4">
                        <h4>Trợ giúp</h4>
                        <a href="#">Dịch vụ khách hàng</a>
                        <a href="#">Tài khoản của tôi</a>
                        <a href="#">Liên hệ</a>
                        
                    </div>

                </div>
            </div>
        </footer>
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
