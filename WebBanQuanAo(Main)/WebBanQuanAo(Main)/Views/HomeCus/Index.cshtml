@model IEnumerable<WebBanQuanAo_Main_.Models.Product>

@{
    ViewBag.Title = "HOME-NOMIE";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="~/Content/Admin/HOME.css" rel="stylesheet" />

<div class="main-banner">
    <a href="@Url.Action("Index","ProductCus")">
        <img src="https://raw.githubusercontent.com/Nomu-276/dulieuweb/refs/heads/main/fashionbanner3.jpg" alt="Main Banner" />
    </a>

</div>


<div class="container" style="margin-top:40px;">
    <div class="row double-banner">

        <div class="col-md-6">
            <a href="@Url.Action("Index","ProductCus")">
                <img src="https://raw.githubusercontent.com/Nomu-276/dulieuweb/main/sub-banner3.jpg" />
            </a>
            <div class="banner-title">BIỂU TƯỢNG THANH LỊCH </div>
        </div>

        <div class="col-md-6">
            <a href="@Url.Action("Index","ProductCus")">
                <img src="https://raw.githubusercontent.com/Nomu-276/dulieuweb/main/sub-banner4.jpg" />
            </a>
            <div class="banner-title">HOLIDAY 2025 </div>
        </div>



    </div>
</div>

<div class="container" style="margin-top:60px;">

    <div class="row">
        <div class="col-md-6">
            <h3 style="font-weight:600;">SẢN PHẨM MỚI</h3>
        </div>

        <div class="col-md-6 text-right viewall">
            <a href="@Url.Action("Index","ProductCus")" style="font-weight:600;">XEM TẤT CẢ</a>
        </div>
    </div>

    <div class="row pro-bar container" style="margin-top:30px;">

        @foreach (var item in Model)
        {
            <div class="col-md-2 col-sm-3 col-xs-6 text-center ">
                <a href="@Url.Action("ChiTiet","ProductCus", new { id=item.ProductID })">
                    <img src="@Url.Content(item.ImagePro)" class="product-img" />
                </a>

            </div>
        }

    </div>

</div>