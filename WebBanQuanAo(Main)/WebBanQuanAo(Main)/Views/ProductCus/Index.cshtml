@model WebBanQuanAo_Main_.Models.ViewModel.ProductSearchVM

@{
    var categories = ViewBag.Categories as List<WebBanQuanAo_Main_.Models.Category>;
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<link href="~/Content/Admin/DanhSachSanPham.css" rel="stylesheet" />
<style>
    
    .nuttimkiem:hover {
        background-color: gray;
        color: white;
    }
    .order-container{
        display:grid;
        grid-template-columns:repeat(4,1fr);
    }
</style>

<h4 class="text-center" style="margin-top:20px;">Danh sách sản phẩm</h4>

@using (Html.BeginForm("Index", "ProductCus", FormMethod.Get))
{
    <div class="form-group search-container row">
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.SearchTerm, new
      {
          @class = "form-control",
          placeholder = "Nhập tên, mô tả hoặc chủng loại sản phẩm..."
      })
            </div>
        
    <div class="col-md-3">
        @*tìm kiếm theo giá*@
            @Html.TextBoxFor(m => m.MinPrice, new
       {
           @class = "form-control",
           placeholder = "Nhập giá trị tối thiểu",
           type = "number"
       })
        </div>
        
    <div class="col-md-4">
        @Html.TextBoxFor(m => m.MaxPrice, new
  {
      @class = "form-control",
      placeholder = "Nhập giá trị tối đa",
      type = "number"
  })
        </div>
        
        <div class="col-md-1"><button type="submit" class="btn btn-cart" style="color:white; background-color:black;"><i class="fa-solid fa-magnifying-glass"></i></button></div>
        
    </div>
    @*Tùy chọn sắp xếp*@
    <div class="form-group order-container mt-3 container ">
        

                @Html.ActionLink("Tên tăng dần", "Index",
     new { sortOrder = "name_asc", searchTerm = Model.SearchTerm }, new { @class = "fm-sort btn btn-light  text-center" })

            @Html.ActionLink("Tên giảm dần", "Index",
new { sortOrder = "name_desc", searchTerm = Model.SearchTerm }, new { @class = "fm-sort btn btn-light text-center" })

            @Html.ActionLink("Giá tăng dần", "Index",
     new { sortOrder = "price_asc", searchTerm = Model.SearchTerm }, new { @class = "fm-sort btn btn-light text-center" })

            @Html.ActionLink("Giá giảm dần", "Index",
     new { sortOrder = "price_desc", searchTerm = Model.SearchTerm }, new {@class= "fm-sort btn btn-light text-center" })
     
</div>
    @*<div class="category-menu container">
        <a href="@Url.Action("Index", "ProductCus")" style="font-weight:700;">Xem tất cả</a>

        @foreach (var cate in categories)
        {

            <a href="@Url.Action("Index", "ProductCus", new { cateId = cate.IDCate })">
                @cate.NameCate
            </a>
        }
    </div>*@
    @Html.Partial("PVListProductCus", Model)
}

