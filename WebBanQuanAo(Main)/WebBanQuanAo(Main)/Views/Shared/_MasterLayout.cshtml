<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NOMIE SHOP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">

    @*Font Awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/js/all.min.js"></script>

    <link href="~/Content/Admin/AdLayout.css" rel="stylesheet" />
    <style>
        /* CSS cho số lượng trên giỏ hàng */
        .cart-badge {
            position: absolute;
            top: -5px; /* Đẩy lên trên icon một chút */
            right: 0px; /* Căn sát bên phải icon */
            background-color: #dc3545; /* Màu đỏ nổi bật */
            color: white;
            border-radius: 50%; /* Bo tròn thành hình tròn */
            padding: 2px 6px; /* Khoảng cách chữ và viền */
            font-size: 11px; /* Cỡ chữ nhỏ gọn */
            font-weight: bold;
            border: 2px solid #fff; /* Viền trắng để tách biệt với icon */
            min-width: 18px; /* Đảm bảo hình tròn không bị méo */
            text-align: center;
        }
    </style>
    @using WebBanQuanAo_Main_.Models.ViewModel
    @* Thêm dòng using trên để hiểu class Cart *@

    @{
        // Lấy giỏ hàng từ Session
        var cart = Session["Cart"] as Cart;
        // Nếu giỏ hàng tồn tại thì lấy tổng số lượng, nếu không thì bằng 0
        int totalQty = (cart != null) ? cart.TotalQuantity() : 0;
    }
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white py-2 shadow-sm">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand" href="@Url.Action("Index","HomeCus")">
                <img style="object-fit: cover;" src="https://raw.githubusercontent.com/Nomu-276/dulieuweb/main/Nomie.png"
                     class="logo-img">
            </a>

            <!-- Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainMenu">

                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 text-center">

                    <li class="nav-item">
                        @Html.ActionLink("NỮ", "Index", "ProductCus", null, new { @class = "nav-link" })
                    </li>
                    
                </ul>


                <div class="d-flex justify-content-center pb-3 pb-lg-0">
                    <i class="fa-solid fa-magnifying-glass mx-2 fs-4"></i>
                    @*<a href="@Url.Action("Login","Account")" style="color:black; text-decoration:none;"><i class="fa-regular fa-user mx-2 fs-4"></i></a>*@
                    @if (Session["NameUser"] == null)
                    {
                        <a href="@Url.Action("Login","Account")" style="color:black; text-decoration:none;"><i class="fa-regular fa-user mx-2 fs-4"></i></a>
                        
                    }
                    else
                    {
                        <a href="@Url.Action("ProfileInfo","Account")" style="color:black; text-decoration:none;"><i class="fa-regular fa-user mx-2 fs-4"></i></a>
                        
                    }
                <a href="@Url.Action("Index", "Cart")" class="cart-icon-container" style="text-decoration:none; color:black; position: relative; display: inline-block;">

                    <i class="fa-solid fa-bag-shopping mx-2 fs-4"></i>

                    @* Chỉ hiển thị số nếu lớn hơn 0 *@
                    @if (totalQty > 0)
                    {
                        <span class="cart-badge">@totalQty</span>
                    }
                </a>

                </div>

            </div>

        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer-hm">
            <p>&copy; @DateTime.Now.Year - NOMIE SHOP - QUẦN ÁO NỮ</p>
            <div class="container">
                <div class="row">

                    <div class="col-md-4 col-sm-4">
                        <h4>Mua sắm</h4>
                        <a href="@Url.Action("IndexCustomer","Product")">NỮ</a>
                        
                    </div>

                    <div class="col-md-4 col-sm-4">
                        <h4>Thông tin doanh nghiệp</h4>
                        <a href="#">Giới thiệu về NOMIE Group</a>
                    </div>

                    <div class="col-md-4 col-sm-4">
                        <h4>Trợ giúp</h4>
                        <a href="#">Dịch vụ khách hàng</a>
                        <a href="#">Tài khoản của tôi</a>
                        <a href="#">Liên hệ</a>

                    </div>

                </div>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
